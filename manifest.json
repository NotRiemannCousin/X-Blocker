{
  "manifest_version": 2,
  "version": "1.0",
  "name": "X Blocker",
  "description": "Block all tweets from verified accounts on X",
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon/icon-48.png",
      "128": "icon/icon-128.png"
    }
  }
}
